<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/statuer</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.autoReconnect">true</property>
        <property name="connection.is-connection-validation-required">true</property>

        <mapping class="fr.lefuturiste.statuer.models.Namespace" />
        <mapping class="fr.lefuturiste.statuer.models.Project" />
        <mapping class="fr.lefuturiste.statuer.models.Service" />
        <mapping class="fr.lefuturiste.statuer.models.Incident" />
    </session-factory>

</hibernate-configuration>